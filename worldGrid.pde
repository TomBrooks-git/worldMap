void worldDrawGrid()
{
 
 int i = 0;
 
 for(int row = 0; row < 32; row ++)
 {
  for(int col = 0; col < 32; col++)
  {
    if(worldGrid[row][col] == 1)
    {
     map[i] = new Tile(col * 50, row * 50, tileSize, tileSize, 1); 
    }
    else
    {
     map[i] = new Tile(col * 50, row * 50, tileSize, tileSize, 0);  
    }
    i++;
  }
 }
 noStroke();
 for(i = 0; i < map.length; i++)
 {
   map[i].show();
 }
  
}

